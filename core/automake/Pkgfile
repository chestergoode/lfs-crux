# Description: A tool for automatically generating Makefiles
# URL:         http://www.gnu.org/software/automake/
# Depends on:  gawk, perl, autoconf
name=automake
version=1.14
release=1
source=(
http://ftp.gnu.org/gnu/automake/automake-$version.tar.xz \
automake-$version-test-1.patch
)
build() {
    cd $name-$version
    patch -Np1 -i $SRC/automake-$version-test-1.patch
    ./configure --prefix=/usr --docdir=/usr/share/doc/automake-$version
    make
    if [ "${PKGMK_RUN_TEST}" == "test" ]
    then
        echo =============== TESTING start
        make -k check || true
        echo =============== TESTING end
    fi
    make DESTDIR=$PKG install

    rm -fr $PKG/usr/share/info
}
