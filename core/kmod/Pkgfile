# Description: Kernel module utilities and library
# URL:         http://git.kernel.org/?p=utils/kernel/kmod/kmod.git
# Maintainer:  CRUX System Team, core-ports at crux dot nu

name=kmod
version=14
release=1
source=(
http://www.kernel.org/pub/linux/utils/kernel/kmod/kmod-$version.tar.xz
)
build() {
    cd $name-$version
    ./configure --prefix=/usr       \
                --bindir=/bin       \
                --libdir=/lib       \
                --sysconfdir=/etc   \
                --disable-manpages  \
                --with-xz           \
                --with-zlib
    make
    if [ "${PKGMK_RUN_TEST}" == "test" ]
    then
        echo =============== TESTING start
        make -k check || true
        echo =============== TESTING end
    fi
    make DESTDIR=$PKG pkgconfigdir=/usr/lib/pkgconfig install
    mkdir -pv $PKG/sbin
    for target in depmod insmod modinfo modprobe rmmod; do
      ln -sv ../bin/kmod $PKG/sbin/$target
    done
   
    ln -sv kmod $PKG/bin/lsmod

    rm -fr $PKG/usr/share/info
}
