# Description: Inetd daemon, FTP and telnet client
# URL:         http://www.gnu.org/software/inetutils/inetutils.html
# Depends on:  readline
name=inetutils
version=1.9.1
release=1
source=(
http://ftp.gnu.org/gnu/inetutils/inetutils-$version.tar.gz
)
build() {
    cd $name-$version
    sed -i -e '/gets is a/d' lib/stdio.in.h
    ./configure --prefix=/usr  \
        --libexecdir=/usr/sbin \
        --localstatedir=/var   \
        --enable-ifconfig     \
        --disable-logger       \
        --disable-syslogd      \
        --disable-whois        \
        --enable-servers
    make
    if [ "${PKGMK_RUN_TEST}" == "test" ]
    then
        echo =============== TESTING start
        make -k check || true
        echo =============== TESTING end
    fi
    make DESTDIR=$PKG install
    mkdir $PKG/bin
    mv -v $PKG/usr/bin/{hostname,ping,ping6,traceroute} $PKG/bin

    rm -fr $PKG/usr/share/info
}
